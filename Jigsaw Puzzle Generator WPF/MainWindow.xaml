<Window x:Class="Jigsaw_Puzzle_Generator_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jigsaw_Puzzle_Generator_WPF"
        mc:Ignorable="d"
        Title="Jigsaw Puzzle Generator" Height="450" Width="800">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Button Content="Browse" Width="60" Click="BrowseToImage" Margin="2"/>

        <Canvas Grid.Row="1" x:Name="puzzleCanvas" Margin="2">
            <Image x:Name="image"/>
        </Canvas>
    </Grid>
</Window>
